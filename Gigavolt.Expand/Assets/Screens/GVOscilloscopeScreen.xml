<Screen xmlns="runtime-namespace:Game">
	<RectangleWidget Size="Infinity, Infinity" OutlineThickness="0"/>
	<StackPanelWidget Direction="Horizontal">
		<CanvasWidget Style="{Widgets/TopBarContents}">
			<LabelWidget Name="TopBar.Label" Text="[GVOscilloscopeScreen:1]"/>
		</CanvasWidget>
		<StackPanelWidget Direction="Vertical">
			<StackPanelWidget Direction="Horizontal">
				<BevelledButtonWidget Size="188, 60">
					<CanvasWidget Name="BevelledButton.Canvas" Margin="0, 0" HorizontalAlignment="Near">
						<BevelledRectangleWidget Name="BevelledButton.Rectangle" CenterColor="112, 112, 112"/>
						<StackPanelWidget Direction="Horizontal" HorizontalAlignment="Near" VerticalAlignment="Center" IsHitTestVisible="false">
							<LabelWidget Name="GVOscilloscopeScreen.TopInput" VerticalAlignment="Center" Margin="10, 0" Text="[GVOscilloscopeScreen:2]" Color="0, 255, 0"/>
						</StackPanelWidget>
					</CanvasWidget>
				</BevelledButtonWidget>
				<CanvasWidget Size="4,0"/>
				<BevelledButtonWidget Size="188, 60">
					<CanvasWidget Name="BevelledButton.Canvas" Margin="0, 0" HorizontalAlignment="Near">
						<BevelledRectangleWidget Name="BevelledButton.Rectangle" CenterColor="112, 112, 112"/>
						<StackPanelWidget Direction="Horizontal" HorizontalAlignment="Near" VerticalAlignment="Center" IsHitTestVisible="false">
							<LabelWidget Name="GVOscilloscopeScreen.RightInput" VerticalAlignment="Center" Margin="10, 0" Text="[GVOscilloscopeScreen:3]" Color="0, 255, 255"/>
						</StackPanelWidget>
					</CanvasWidget>
				</BevelledButtonWidget>
				<CanvasWidget Size="4,0"/>
				<BevelledButtonWidget Size="188, 60">
					<CanvasWidget Name="BevelledButton.Canvas" Margin="0, 0" HorizontalAlignment="Near">
						<BevelledRectangleWidget Name="BevelledButton.Rectangle" CenterColor="112, 112, 112"/>
						<StackPanelWidget Direction="Horizontal" HorizontalAlignment="Near" VerticalAlignment="Center" IsHitTestVisible="false">
							<LabelWidget Name="GVOscilloscopeScreen.BottomInput" VerticalAlignment="Center" Margin="10, 0" Text="[GVOscilloscopeScreen:4]" Color="255, 0, 0"/>
						</StackPanelWidget>
					</CanvasWidget>
				</BevelledButtonWidget>
				<CanvasWidget Size="4,0"/>
				<BevelledButtonWidget Size="188, 60">
					<CanvasWidget Name="BevelledButton.Canvas" Margin="0, 0" HorizontalAlignment="Near">
						<BevelledRectangleWidget Name="BevelledButton.Rectangle" CenterColor="112, 112, 112"/>
						<StackPanelWidget Direction="Horizontal" HorizontalAlignment="Near" VerticalAlignment="Center" IsHitTestVisible="false">
							<LabelWidget Name="GVOscilloscopeScreen.LeftInput" VerticalAlignment="Center" Margin="10, 0" Text="[GVOscilloscopeScreen:5]" Color="255, 255, 0"/>
						</StackPanelWidget>
					</CanvasWidget>
				</BevelledButtonWidget>
				<CanvasWidget Size="4, 0"/>
				<BevelledButtonWidget Name="GVOscilloscopeScreen.Stop" Size="60, 60">
					<CanvasWidget Name="BevelledButton.Canvas" Margin="0, 0">
						<BevelledRectangleWidget Name="BevelledButton.Rectangle" CenterColor="50, 150, 35" BevelColor="50, 150, 35"/>
						<RectangleWidget Size="24, 24" OutlineColor="0, 0, 0, 0" FillColor="255, 255, 255" IsVisible="true" HorizontalAlignment="Center" VerticalAlignment="Center"/>
					</CanvasWidget>
				</BevelledButtonWidget>
				<CanvasWidget Size="4, 0"/>
				<BevelledButtonWidget Name="GVOscilloscopeScreen.Step" Size="60, 60">
					<CanvasWidget Name="BevelledButton.Canvas" Margin="0, 0">
						<BevelledRectangleWidget Name="BevelledButton.Rectangle" CenterColor="50, 150, 35" BevelColor="50, 150, 35"/>
						<RectangleWidget Size="32, 32" Subtexture="{Textures/Atlas/ArrowRight}" OutlineColor="0, 0, 0, 0" FillColor="255, 255, 255" IsVisible="true" HorizontalAlignment="Center" VerticalAlignment="Center"/>
					</CanvasWidget>
				</BevelledButtonWidget>
				<CanvasWidget Size="4, 0"/>
				<BevelledButtonWidget Name="GVOscilloscopeScreen.Jump" Size="60, 60">
					<CanvasWidget Name="BevelledButton.Canvas" Margin="0, 0">
						<BevelledRectangleWidget Name="BevelledButton.Rectangle" CenterColor="50, 150, 35" BevelColor="50, 150, 35"/>
						<RectangleWidget Size="32, 32" Subtexture="{Textures/Atlas/TurnRight}" OutlineColor="0, 0, 0, 0" FillColor="255, 255, 255" IsVisible="true" HorizontalAlignment="Center" VerticalAlignment="Center"/>
					</CanvasWidget>
				</BevelledButtonWidget>
			</StackPanelWidget>
			<CanvasWidget Name="GVOscilloscopeScreen.Canvas" Size="Infinity, Infinity" Margin="0, 4"/>
		</StackPanelWidget>
	</StackPanelWidget>
</Screen>