<CanvasWidget xmlns="runtime-namespace:Game">

	<CanvasWidget Size="500, 300" ClampToBounds="true" HorizontalAlignment="Center" VerticalAlignment="Center">
		<RectangleWidget FillColor="0, 0, 0, 255" OutlineColor="128, 128, 128, 128" OutlineThickness="2"/>
		<StackPanelWidget Direction="Vertical" HorizontalAlignment="Center" VerticalAlignment="Near" Margin="0, 15">

			<LabelWidget Font="{Fonts/Pericles}" Text="[EditGVCounterDialog:1]" HorizontalAlignment="Center"/>

			<CanvasWidget Size="0, Infinity"/>

			<StackPanelWidget Direction="Horizontal" HorizontalAlignment="Center">
				<LabelWidget Text="[EditGVCounterDialog:2]"/>
				<CanvasWidget Size="124, 34">
					<RectangleWidget FillColor="0, 0, 0, 0" OutlineColor="128, 128, 128, 128" OutlineThickness="1"/>
					<TextBoxWidget Name="EditGVCounterDialog.Overflow" Size="120, 30" MaximumLength="11" FontScale="1" TextureLinearFilter="false" Margin="2, 2"/>
				</CanvasWidget>
			</StackPanelWidget>
			<StackPanelWidget Direction="Horizontal" HorizontalAlignment="Center">
				<LabelWidget Name="EditGVCounterDialog.CurrentLabel" Text="[EditGVCounterDialog:6]"/>
				<CanvasWidget Size="124, 34">
					<RectangleWidget FillColor="0, 0, 0, 0" OutlineColor="128, 128, 128, 128" OutlineThickness="1"/>
					<TextBoxWidget Name="EditGVCounterDialog.Current" Size="120, 30" MaximumLength="11" FontScale="1" TextureLinearFilter="false" Margin="2, 2"/>
				</CanvasWidget>
			</StackPanelWidget>

			<LabelWidget Margin="0, 10" Text="[EditGVCounterDialog:3]" HorizontalAlignment="Center"/>

			<CanvasWidget Size="0, Infinity"/>

			<StackPanelWidget Direction="Horizontal" HorizontalAlignment="Center">
				<BevelledButtonWidget Name="EditGVCounterDialog.OK" Style="{Styles/ButtonStyle_160x60}" Text="[EditGVCounterDialog:4]" Margin="20, 0"/>
				<BevelledButtonWidget Name="EditGVCounterDialog.Cancel" Style="{Styles/ButtonStyle_160x60}" Margin="20, 0" Text="[EditGVCounterDialog:5]"/>
			</StackPanelWidget>
		</StackPanelWidget>
	</CanvasWidget>
</CanvasWidget>